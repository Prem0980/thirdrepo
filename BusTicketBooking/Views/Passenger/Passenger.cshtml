@model BusTicketBooking.Models.Passenger
@{
    ViewBag.Title = "Passenger";
}
<script>
    var rowCount = 1;
    function add(tableID) {
        alert("HI");
        var table = document.getElementById(tableID);
        var row = table.insertRow(-1);
        row.id = "row" + rowCount;
        var cell1 = row.insertCell(0);
        var cell2 = row.insertCell(1);
        var cell3 = row.insertCell(2);
        var cell4 = row.insertCell(3);
        cell1.innerHTML = "<input type='text' name='PassengerIDI' />";
        cell2.innerHTML = "<input type='text' name='Name' />";
        cell3.innerHTML = "<input type='text' name='Age' />";
        cell4.innerHTML = "<input type='text' name='Gender' />";
        rowCount++;
        var newRow = document.getElementById("row" + (rowCount - 1));
        newRow.style.display = "table-row";
    }
</script>

<h2>Passenger</h2>
@using (Html.BeginForm())
{
    <table id="myTable">
        <tr>
            <th>Passenger</th>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(c => c.PassengerID)</td>
            <td>@Html.TextBoxFor(c => c.Name)</td>
            <td>@Html.TextBoxFor(c => c.Age)</td>
            <td>@Html.TextBoxFor(c => c.Gender)</td>
            <td><button onclick="add('mytable')">+</button></td>
        </tr>
    </table>
}
