@model BusTicketBooking.Models.RouteDetails
@{
    ViewBag.Title = "AddNewRoute";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
<style>
    .error {
        color: red;
    }
</style>

<h2>AddNewRoute</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>RouteID</td>
            <td>@Html.TextBoxFor(c => c.RouteID)</td>
            <td class="error">@Html.ValidationMessageFor(c => c.RouteID)</td>

        </tr>
        <tr>
            <td>FromLocation</td>
            <td>
                @Html.TextBoxFor(c=>c.FromLocation)

            </td>
            <td class="error">@Html.ValidationMessageFor(c=>c.FromLocation)</td>
        </tr>
        <tr>
            <td>ToLocation</td>
            <td>
                @Html.TextBoxFor(c => c.ToLocation)
            </td>
            <td class="error">@Html.ValidationMessageFor(c => c.ToLocation)</td>
        </tr>

        <tr><td><input type="submit" class="btn btn-primary btn-lg active" value="AddNewRoute" /></td></tr>
    </table>
    
        <div>
            @if (ViewBag.msg != null)
            {
                <font color="red">@ViewBag.msg</font>
            }
            @if (ViewBag.msg1 != null)
            {
                <font color="green">@ViewBag.msg1</font>
            }
        </div>
    
    
}

